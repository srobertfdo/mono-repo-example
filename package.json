{
  "name": "automotive-monorepo",
  "version": "0.0.0",
  "license": "MIT",
  "packageManager": "npm@10.2.4",
  "scripts": {
    "postinstall": "npx nx build ui && npm run link-ui",
    "link-ui": "mkdir -p node_modules/@automotive && rm -rf node_modules/@automotive/ui && ln -sf $(pwd)/libs/ui node_modules/@automotive/ui",
    "build": "nx build",
    "dev": "nx run-many --target=serve --projects=ford,lincoln,audi --parallel=3",
    "dev:ford": "nx serve ford",
    "dev:lincoln": "nx serve lincoln",
    "dev:audi": "nx serve audi",
    "test": "nx test",
    "lint": "nx workspace-lint && nx lint",
    "e2e": "nx e2e",
    "affected:apps": "nx affected:apps",
    "affected:libs": "nx affected:libs",
    "affected:build": "nx affected:build",
    "affected:e2e": "nx affected:e2e",
    "affected:test": "nx affected:test",
    "affected:lint": "nx affected:lint",
    "affected:dep-graph": "nx affected:dep-graph",
    "affected": "nx affected",
    "format": "nx format:write",
    "format:write": "nx format:write",
    "format:check": "nx format:check",
    "update": "nx migrate latest",
    "workspace-generator": "nx workspace-generator",
    "dep-graph": "nx dep-graph",
    "help": "nx help",
    "clean": "nx reset && rm -rf node_modules dist .nx",
    "deploy:ford": "vercel --prod --local-config=vercel-ford.json",
    "deploy:lincoln": "vercel --prod --local-config=vercel-lincoln.json",
    "deploy:audi": "vercel --prod --local-config=vercel-audi.json",
    "deploy:all": "npm run deploy:ford && npm run deploy:lincoln && npm run deploy:audi"
  },
  "private": true,
  "dependencies": {
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "geist": "^1.4.2",
    "lucide-react": "^0.263.1",
    "next": "14.2.5",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwind-merge": "^1.14.0"
  },
  "devDependencies": {
    "@nx/eslint": "19.5.0",
    "@nx/eslint-plugin": "19.5.0",
    "@nx/js": "19.5.0",
    "@nx/next": "19.5.0",
    "@nx/react": "19.5.0",
    "@nx/workspace": "19.5.0",
    "@types/node": "18.16.9",
    "@types/react": "18.3.3",
    "@types/react-dom": "18.3.0",
    "@typescript-eslint/eslint-plugin": "^7.16.0",
    "@typescript-eslint/parser": "^7.16.0",
    "autoprefixer": "^10.4.13",
    "eslint": "~8.57.0",
    "eslint-config-next": "14.2.5",
    "nx": "19.5.0",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.4",
    "typescript": "~5.5.2"
  }
}
